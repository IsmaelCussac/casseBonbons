        android:layout_marginTop="66dp"
        android:text="Options" />

    <Button
        android:id="@+id/rules"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/options"
        android:layout_below="@+id/play"
