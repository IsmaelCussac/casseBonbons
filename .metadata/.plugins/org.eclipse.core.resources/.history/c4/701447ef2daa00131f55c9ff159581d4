package com.jeupoo.main;

import android.graphics.Bitmap;
import android.graphics.Paint;

public class BonbonDeBase extends Movable{
	
	public final int valeur = 10;
	
	public BonbonDeBase(Bitmap bitmap, int indice) {
		this.indice = indice;
		this.bitmap = bitmap;
		paint = new Paint();
		isMoved = false;
	}
	
	public int getValeur() {
		return valeur;
	}

	public void bombe(GridPrinc grid, int[][] gridDup, int y, int x) {
		if(!grid.grille[y][x].isEmpty())
			grid.grille[y][x].setEmpty();
		grid.gridDup[y][x]=grid.grille[y][x].mCase.getIndice();
		grid.point.Add(valeur);
	}
}
