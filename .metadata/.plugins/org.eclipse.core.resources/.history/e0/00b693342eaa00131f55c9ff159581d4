package com.jeupoo.main;

import android.graphics.Bitmap;
import android.graphics.Paint;

public class BonbonRaye extends Movable{
	
	public final int valeur = 250;
	
	public BonbonRaye(Bitmap bitmap, int indice) {
		this.indice = indice;
		this.bitmap = bitmap;
		paint = new Paint();
		isMoved = false;
	}

	public int getValeur() {
		return valeur;
	}
	
	
	public void bombe(GridPrinc grid, int[][] gridDup, int y, int x) {
		if(!grid.grille[y][x].isEmpty()){
			grid.grille[y][x].setEmpty();
			for(int l=0; l<grid.getNbrV(); l++){
				actionBombe(grid, gridDup, l, x);
			}
			grid.point.Add(valeur);
			gridDup[y][x]=grid.grille[y][x].mCase.getIndice()-10;
		}

	}

}
