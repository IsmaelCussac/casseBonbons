package com.jeupoo.main;

import android.graphics.Bitmap;
import android.graphics.Paint;

public class BonbonEmballe extends Movable {
	
	public final int valeur = 400;	
	
	public BonbonEmballe(Bitmap bitmap, int indice) {
		this.indice = indice;
		this.bitmap = bitmap;
		paint = new Paint();
		isMoved = false;
	}

	public int getValeur() {

		return valeur;
	}


	public void bombe(GridPrinc grid, int[][] gridDup, int y, int x) {

		grid.grille[y][x].setEmpty();
		
		if(y - 1 >= 0){
			if(!grid.grille[y-1][x].isEmpty())
				actionBombe(grid, gridDup, y-1, x);
			if(x - 1 >= 0){
				if(!grid.grille[y-1][x-1].isEmpty())
					actionBombe(grid, gridDup, y-1, x-1);
			}
			if(x + 1 < grid.getNbrH()){
				if(!grid.grille[y-1][x+1].isEmpty())
					actionBombe(grid, gridDup, y-1, x+1);
			}
			
		}
		
		if(y + 1 < grid.getNbrV()){
			if(!grid.grille[y+1][x].isEmpty())
				actionBombe(grid, gridDup, y+1, x);
			if(x - 1 >= 0){
				if(!grid.grille[y+1][x-1].isEmpty())
					actionBombe(grid, gridDup, y+1, x-1);
			}
			if(x + 1 < grid.getNbrH()){
				if(!grid.grille[y+1][x+1].isEmpty())
					actionBombe(grid, gridDup, y+1, x+1);
			}
		}
		
		if(x - 1 >= 0){
			if(!grid.grille[y][x-1].isEmpty())
				actionBombe(grid, gridDup, y, x-1);
		}
		
		if(x + 1 < grid.getNbrH()){
			if(!grid.grille[y][x+1].isEmpty())
				actionBombe(grid, gridDup, y, x+1);
		}
		
		grid.point.Add(valeur);
		gridDup[y][x]=grid.grille[y][x].mCase.getIndice()-20;
	}
}