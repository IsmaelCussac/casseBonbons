package com.example.jeupoo;

import android.content.Intent;
import android.graphics.Canvas;
import android.widget.Chronometer;
import android.widget.TextView;

public class GraphicWorld implements IDrawable{
	
	GridPrinc grid;
	GObjet[] grille = null;
	BackGround bk;
	int t =0;
	TextView points;
	Chronometer chrono;
	public GraphicWorld(GridPrinc grid, BackGround bk,GObjet [] grille, TextView points, Chronometer chrono ){
		
		this.grille=grille;
		this.bk=bk;
		this.grid=grid;
		this.points=points;
		this.chrono = chrono;
	}

	public void onDraw(Canvas canvas, int dt,int iWidth,int iHeight) {
		points.setText(""+grid.point.getPoints());
    
		bk.paint(canvas, iWidth, iHeight);		
		Animation a = grid.getAnimation();
		grille = grid.trans();
		a.dessiner(grid,grille, canvas, dt);
		

	}
	
	public void add(GObjet gObjet){
		
		//GObjet.add(gObjet);
	}
}